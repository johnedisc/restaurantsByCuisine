@{
  Layout = "_Layout";
}

@using RestaurantsByCuisine.Models;

<h1>Cuisine</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
} 

@foreach (Cuisine cuisine in Model)
{
  <h3><a href='/cuisine/@cuisine.Id'>@cuisine.Name</a></h3>
}

<p><a href='/'>Back home</a></p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>